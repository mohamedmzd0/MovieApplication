<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mohamedabdelaziz.movieapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/moviedb"
        android:label="@string/app_name"
        android:roundIcon="@drawable/moviedb"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".View.Splash.SplashScreen"
            android:label="@string/app_name"
            android:configChanges="keyboard|screenSize|navigation|density|touchscreen|keyboardHidden|orientation|smallestScreenSize|screenLayout"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainAct.View.Main.MainActivity"
            android:label="@string/title_activity_main"
            android:configChanges="keyboard|screenSize|navigation|density|touchscreen|keyboardHidden|orientation|smallestScreenSize|screenLayout"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DetailActivity.View.DetailActiviy"
            android:label="@string/title_activity_detail_activiy"
            android:configChanges="keyboard|screenSize|navigation|density|touchscreen|keyboardHidden|orientation|smallestScreenSize|screenLayout"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>